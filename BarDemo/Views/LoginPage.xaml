<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="BarDemo.Views.LoginPage" Title="Login">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Sign Up" Command="{Binding OnSignUpButtonClickedCommand}" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout VerticalOptions="StartAndExpand">
            <Label Text="Username" />
            <Entry Text="{Binding UsernameEntry , Mode=TwoWay}" Placeholder="username" />
            <!--<Entry x:Name="{Binding usernameEntry}" Placeholder="username" />-->
            <Label Text="Password" />
            <Entry Text="{Binding PasswordEntry , Mode=TwoWay}" Placeholder="password" IsPassword="True" />
            <!--<Entry x:Name="{Binding  passwordEntry}" IsPassword="true" />-->
            <Button Text="Login" Command="{Binding OnLoginButtonClickedCommand}" />
            <Label x:Name="messageLabel" />
            <Button Text="FACEBOOK" Command="{Binding OnFBButtonClickedCommand}" />
        </StackLayout>
    </ContentPage.Content>
    </ContentPage>